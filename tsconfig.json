{
  "compilerOptions": {
    "target": "ES6",
    "outDir": "./dist",
    "typeRoots": ["node_modules/@types"],
    "types": ["node"],
  "rootDir": "c:/PosNelby/nelby-app",
    "lib": [
      "dom",
      "esnext"
    ], 
    "strict": true, // Activar chequeo estricto
    "esModuleInterop": true, // Interoperabilidad de módulos
    "module": "CommonJS", // Para Node.js
    "moduleResolution": "node", // Resolución de módulos tipo Node.js
    "jsx": "preserve", // Para JSX de React
    "incremental": true, // Mejora la compilación
    "resolveJsonModule": true, // Permite importar JSON
    "skipLibCheck": true // Evita chequeo de las librerías externas
    ,
    "allowJs": true,
    "noEmit": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "src/**/*", // Incluir todos los archivos de código fuente en src
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules", // Excluir node_modules
    "dist", // Excluir la carpeta dist generada
    ".next" ,// Excluir la carpeta .next generada por Next.js
    "next.config.ts"
  ]
}
