{
  "compilerOptions": {
    "target": "ES6",
    "outDir": "./dist",
    "typeRoots": ["node_modules/@types"],
    "types": ["node"],
    "rootDir": "./src",                          // Cambié esto para asegurarme que está apuntando correctamente a la carpeta src
    "lib": [
      "dom",
      "esnext"
    ],
    "strict": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "jsx": "preserve",
    "incremental": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "allowJs": true,
    "noEmit": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "src/**/*",                                 // Asegúrate de incluir todos los archivos dentro de src
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".next",
    "next.config.ts"                             // Asegúrate de excluir el archivo de configuración de Next.js
  ]
}
